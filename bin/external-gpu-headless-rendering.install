#!/bin/bash

# Add systemd unit
sudo cp ./external-gpu-headless-rendering.service /etc/systemd/system/
sudo systemctl daemon-reload
sudo systemctl enable external-gpu-headless-rendering.service

# Copy boot script to bin directory
mkdir -p /home/deck/bin/
cp ./external-gpu-headless-rendering.boot.sh /home/deck/bin/

echo COMPLETE
